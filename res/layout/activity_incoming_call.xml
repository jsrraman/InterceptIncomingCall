<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IncomingCallActivity" >

    <TextView
        android:id="@+id/txt_call_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/call_status" />

    <Button
        android:id="@+id/btn_pickup_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_call_status"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="29dp"
        android:text="Pick up" />

    <Button
        android:id="@+id/btn_hangup_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_pickup_call"
        android:layout_alignBottom="@+id/btn_pickup_call"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:text="Hang up" />

</RelativeLayout>